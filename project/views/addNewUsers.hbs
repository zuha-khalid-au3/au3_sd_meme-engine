
<form   class="form-signin bg-white border border-light" >
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal"   id = "heading">Create an account</h1>
        </div>

        <div class="form-label-group">
            <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus />
            <label for="Name">Username</label>
        </div>

        <div class="form-label-group">
            <input type="text" id="email" name="email" class="form-control" placeholder="Email" required />
            <label for="email">Email</label>
        </div>

        <div class="form-label-group">
            <input type="password" id = "password" name="password" class="form-control" placeholder="Password" required>
            <label for="password">Password</label>
        </div>

        <div class="form-label-group">
            <input type="text" id="phone" name="phone" class="form-control" placeholder="Phone" required>
            <label for="phone">Phone</label>
        </div>

       

        <button class="btn btn-lg btn-success btn-block"  id ="btnSubmit" type="submit">Sign Up</button>

    </form>
 